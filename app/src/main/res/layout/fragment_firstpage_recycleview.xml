<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.codyy.erpsportal.commons.widgets.RefreshLayout
        android:id="@+id/fragment_firstpage_layout_refreshlayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:appBarLayoutId="@id/app_bar_layout">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/fragment_firstpage_layout_recycleview"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="#fff" />
    </com.codyy.erpsportal.commons.widgets.RefreshLayout>

    <com.codyy.erpsportal.commons.widgets.EmptyView
        android:id="@+id/fragment_firstpage_layout_emptyview"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</RelativeLayout>
