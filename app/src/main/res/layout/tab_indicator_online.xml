<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="3dp" />

    <ImageView
        android:id="@+id/img_tab_indicator"
        android:background="@drawable/tab_channel"
        android:layout_marginTop="3dp"
        android:layout_centerHorizontal="true"
        android:layout_width="25dp"
        android:layout_height="25dp" />

    <com.codyy.erpsportal.onlinemeetings.widgets.BGABadgeTextView
        android:id="@+id/tv_tab_notice"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:badge_gravity="rightCenter"
        android:text=" "
        android:layout_marginLeft="-15dp"
        app:badge_padding = "2dp"
        android:layout_toRightOf="@id/img_tab_indicator"
        android:gravity="center_vertical"
        android:textSize="11sp"
        />

    <TextView
        android:id="@+id/tv_tab_indicator"
        android:text="首页"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="1dp"
        android:layout_below="@id/img_tab_indicator"
        android:gravity="center_horizontal"
        android:textSize="11sp"
        android:textColor="@color/tab_title" />

    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_below="@id/tv_tab_indicator" />
</RelativeLayout>