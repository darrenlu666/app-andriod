<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_exam_info"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFEFEEF3"
    android:paddingTop="8dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingBottom="4dp">

    <TextView
        android:id="@+id/tv_exam_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="考试信息"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        />

    <TextView
        android:id="@+id/tv_exam_create_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:paddingRight="10dp"
        android:textColor="@color/exam_normal_color"
        android:textSize="14sp"
         />

    <TextView
        android:id="@+id/tv_exam_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tv_exam_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_exam_info"
        android:layout_marginTop="4dp"
        android:singleLine="true"
        android:textColor="@color/exam_normal_color"
        android:textSize="14sp"
         />

    <TextView
        android:id="@+id/tv_exam_score"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_exam_name"
        android:layout_marginTop="4dp"
        android:singleLine="true"
        android:textColor="@color/exam_normal_color"
        android:textSize="14sp"
         />

    <TextView
        android:id="@+id/tv_exam_max_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_exam_name"
        android:layout_marginTop="4dp"
        android:layout_toRightOf="@+id/tv_exam_score"
        android:singleLine="true"
        android:textColor="@color/exam_normal_color"
        android:textSize="14sp"
         />

    <TextView
        android:id="@+id/tv_exam_min_score"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_exam_score"
        android:layout_marginTop="4dp"
        android:singleLine="true"
        android:textColor="@color/exam_normal_color"
        android:textSize="14sp"
         />

    <TextView
        android:id="@+id/tv_exam_avg_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_exam_score"
        android:layout_marginTop="4dp"
        android:layout_toRightOf="@+id/tv_exam_min_score"
        android:singleLine="true"
        android:textColor="@color/exam_normal_color"
        android:textSize="14sp"
         />

    <TextView
        android:id="@+id/tv_exam_my_score"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_exam_min_score"
        android:layout_marginTop="4dp"
        android:singleLine="true"
        android:textColor="#FF3E74BE"
        android:textSize="14sp"
         />
</RelativeLayout>