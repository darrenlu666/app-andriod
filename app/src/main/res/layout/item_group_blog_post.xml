<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app = "http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rlt_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?selectableItemBackground"
    >
    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/sdv_pic"
        android:layout_width="@dimen/poe_head_pic_size_small"
        android:layout_height="@dimen/poe_head_pic_size_small"
        style="@style/sdv_item_style"
        app:placeholderImage="@drawable/default_person_head"
        />
    <TextView
        android:id="@+id/tv_teacher_name"
        style="@style/txt_group_txt_desc"
        tools:text="李老师"
        android:layout_width="@dimen/poe_head_pic_size_small"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_below="@id/sdv_pic"
        android:textSize="14sp"
        android:gravity="center"
        android:singleLine="true"
        android:layout_marginBottom="10dp"
        />
    <TextView
        android:id="@+id/tv_name"
        style="@style/txt_group_txt_Title"
        android:singleLine="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/sdv_pic"
        android:layout_alignTop="@id/sdv_pic"
        android:layout_marginTop="@dimen/poe_top_bottom_text_addition_padding_size"
        tools:text="Title"
        />
    <TextView
        android:id="@+id/tv_desc"
        style="@style/txt_group_txt_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/sdv_pic"
        android:layout_below="@id/tv_name"
        android:layout_marginRight="10dp"
        android:layout_marginTop="@dimen/poe_title_margin_top"
        android:maxLines="2"
        android:minLines="1"
        tools:text="content desc content desc content desc content desc content desc content desc content desc content desc content desc content desc content desc content desc"
        />
</RelativeLayout>