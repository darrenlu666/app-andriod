<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="horizontal">


    <ListView
        android:id="@+id/select_layout_listview_left"
        android:layout_width="105dp"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:divider="#e9e9e9"
        android:dividerHeight="1px" />


    <View
        android:layout_width="1px"
        android:layout_height="match_parent"
        android:background="#e9e9e9" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:orientation="vertical">

        <ListView
            android:id="@+id/select_layout_listview_right"
            android:layout_width="146dp"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:divider="#e9e9e9"
            android:dividerHeight="1px" />


        <include
            android:id="@+id/select_layout_grade_state"
            layout="@layout/select_grade_right_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />

        <include
            android:id="@+id/select_layout_subject_state"
            layout="@layout/select_subject_right_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />

        <include
            android:id="@+id/select_layout_all_state"
            layout="@layout/select_item_right_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />


    </LinearLayout>

</LinearLayout>