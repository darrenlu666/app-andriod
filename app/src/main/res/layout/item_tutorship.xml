<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackground"
                android:padding="8dp"
                android:clickable="true">

    <ImageView
        android:id="@+id/iv_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="16dp"
        android:layout_marginEnd="16dp"
        android:src="@drawable/tutorship_status_init"/>

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/iv_status"
        android:layout_toRightOf="@+id/iv_status"
        android:ellipsize="end"
        android:singleLine="true"
        android:textSize="18sp"
        tools:text="小学同步作业课堂系列"/>

    <TextView
        android:id="@+id/tv_grade_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_title"
        android:layout_marginTop="8dp"
        android:layout_toEndOf="@+id/iv_status"
        android:layout_toRightOf="@+id/iv_status"
        android:layout_toLeftOf="@+id/tv_duration"
        android:layout_toStartOf="@+id/tv_duration"
        android:singleLine="true"
        android:textSize="16sp"
        tools:text="主讲老师 张老师"/>

    <TextView
        android:id="@+id/tv_duration"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_title"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:singleLine="true"
        android:textSize="16sp"
        tools:text="语文fdfdfdfdfdfdfdfdfd"/>

    <TextView
        android:id="@+id/tv_create_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_grade_name"
        android:layout_marginTop="8dp"
        android:layout_toEndOf="@+id/iv_status"
        android:layout_toRightOf="@+id/iv_status"
        android:textSize="16sp"
        tools:text="开课时间 2015-09-23 09:44"/>
</RelativeLayout>
