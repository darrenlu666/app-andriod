<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:clickable="true"
    android:paddingBottom="8dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="8dp">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/circle_bg_select">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/search_group_head"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            fresco:placeholderImage="@drawable/default_group_icon" />

        <TextView
            android:id="@+id/search_group_limit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:text="0/0"
            android:textColor="@color/list_item_body"
            android:textSize="@dimen/list_item_body" />

        <TextView
            android:id="@+id/search_group_create"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_toLeftOf="@id/search_group_limit"
            android:layout_toRightOf="@id/search_group_head"
            android:singleLine="true"
            android:text="创建人"
            android:textColor="@color/list_item_body"
            android:textSize="@dimen/list_item_body" />

        <TextView
            android:id="@+id/search_group_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/search_group_create"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/search_group_head"
            android:singleLine="true"
            android:text="title"
            android:textColor="@color/list_item_title"
            android:textSize="@dimen/list_item_title" />

        <TextView
            android:id="@+id/search_group_subject"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/search_group_create"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/search_group_head"
            android:singleLine="true"
            android:text="学科"
            android:textColor="@color/list_item_body"
            android:textSize="@dimen/list_item_body" />

    </RelativeLayout>
</RelativeLayout>