<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context="com.codyy.erpsportal.repairs.controllers.activities.CommonMalfunctionsActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/main_color">

        <Button
            android:id="@+id/btn_return"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            android:background="@drawable/back_btn_bg" />

        <Button
            android:id="@+id/btn_search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginEnd="48dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="48dp"
            android:layout_marginStart="4dp"
            android:layout_toEndOf="@id/btn_return"
            android:layout_toRightOf="@id/btn_return"
            android:background="@drawable/circle_bg"
            android:gravity="start"
            android:minHeight="0dp"
            android:minWidth="0dp"
            android:padding="8dp"
            android:text="常见问题"
            android:textColor="#cacaca"
            android:textSize="16dp" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.flexbox.FlexboxLayout
            android:id="@+id/fbl_malfunction_categories"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            app:dividerDrawableHorizontal="@drawable/dv_h_malfunctions"
            app:dividerDrawableVertical="@drawable/dv_v_malfunctions"
            app:flexWrap="wrap"
            app:showDividerHorizontal="middle"
            app:showDividerVertical="middle">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/ib_latest_malfunction"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:contentDescription="@null"
                    android:src="@drawable/bg_latest_malfunction" />

                <ImageView
                    android:id="@+id/ib_hot_malfunction"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:contentDescription="@null"
                    android:layout_marginTop="16dp"
                    android:src="@drawable/bg_hot_malfunction" />

            </LinearLayout>

            <TextView
                style="@style/MalfunctionCategoryL1Tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="软件故障" />

            <TextView
                style="@style/MalfunctionCategoryL2Tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="全部" />

            <TextView
                style="@style/MalfunctionCategoryL2Tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="视频问题" />

            <TextView
                style="@style/MalfunctionCategoryL2Tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="音频问题" />

            <TextView
                style="@style/MalfunctionCategoryL2Tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="课表问题" />

            <TextView
                style="@style/MalfunctionCategoryL2Tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="管理后台问题" />

            <TextView
                style="@style/MalfunctionCategoryL2Tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="监管平台问题" />

            <TextView
                style="@style/MalfunctionCategoryL2Tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="网络问题" />

            <TextView
                style="@style/MalfunctionCategoryL2Tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="设备问题" />

            <View
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/divider_horizontal_line" />

            <TextView
                style="@style/MalfunctionCategoryL1Tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="硬件故障" />

            <TextView
                style="@style/MalfunctionCategoryL2Tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="全部" />

            <TextView
                style="@style/MalfunctionCategoryL2Tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="视频故障" />

            <TextView
                style="@style/MalfunctionCategoryL2Tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="音频故障" />

        </com.google.android.flexbox.FlexboxLayout>

    </ScrollView>
</LinearLayout>
