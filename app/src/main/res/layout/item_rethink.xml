<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:clickable="true"
                android:background="?attr/selectableItemBackground"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools">
    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/dv_icon"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:background="@color/white"
        app:placeholderImage="@drawable/default_subject"/>
    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/dv_icon"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_toEndOf="@id/dv_icon"
        android:singleLine="true"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/md_grey_900"
        tools:text="长方形和正方形面积的计算"/>

    <TextView
        android:id="@+id/tv_summary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/dv_icon"
        android:layout_toEndOf="@id/dv_icon"
        android:layout_below="@id/tv_title"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:textSize="16sp"
        tools:text="长方形和正方形面积的计算,求菜菜的心理阴影面积分到达发达的发放大"
        android:maxLines="2"
        android:ellipsize="end"
        android:layout_marginLeft="8dp"/>
</RelativeLayout>