<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?selectableItemBackground"
        android:clipToPadding="false">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/dv_icon"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_centerVertical="true"
            app:placeholderImage="@drawable/default_subject"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:layout_toEndOf="@id/dv_icon"
            android:layout_toRightOf="@id/dv_icon"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_name"
                style="@style/txt_group_txt_Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                tools:text="haha"/>

            <TextView
                android:id="@+id/et_desc"
                style="@style/txt_group_txt_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:drawableLeft="@drawable/ic_author"
                android:drawableStart="@drawable/ic_author"
                android:lineSpacingMultiplier="1.2"
                android:lines="1"
                tools:text="haha"/>
        </LinearLayout>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/divide_line"/>
</LinearLayout>