<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?selectableItemBackground"
    android:padding="14dp">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/dv_icon"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_centerVertical="true"
        android:background="@color/white"
        app:placeholderImage="@drawable/ic_load_failed"/>

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignWithParentIfMissing="true"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:layout_toLeftOf="@id/dv_icon"
        android:layout_toStartOf="@id/dv_icon"
        android:singleLine="true"
        android:textSize="17sp"
        android:textColor="#242424"
        tools:text="测试标题测试标题测试标题测试标题测试标题测试标题测试标题测试标题"/>

    <TextView
        android:id="@+id/tv_intro"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_alignWithParentIfMissing="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/tv_title"
        android:layout_marginRight="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp"
        android:layout_toLeftOf="@id/dv_icon"
        android:layout_toStartOf="@id/dv_icon"
        android:textSize="15sp"
        android:ellipsize="end"
        android:maxLines="2"
        tools:text="我们的故事。我们的故事。我们的故事。我们的故事。我们的故事。我们的故事。我们的故事。"/>
</RelativeLayout>
