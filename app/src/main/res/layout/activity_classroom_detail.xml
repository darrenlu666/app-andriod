<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_video"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ViewStub
            android:id="@+id/vs_class"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout="@layout/layout_class_live"/>

        <ViewStub
            android:id="@+id/vs_record"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout="@layout/layout_class_record"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_title"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/ll_video"
        android:background="@color/list_item_background_pressed"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_class_detail"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/class_detail"
            android:textSize="14sp"/>

        <View
            android:layout_width="0.05dp"
            android:layout_height="25dp"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:background="@color/gray"/>

        <TextView
            android:id="@+id/tv_latest_comment"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/newest_comment"
            android:textSize="14sp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_line"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@+id/ll_title"
        android:orientation="horizontal">

        <View
            android:id="@+id/view_fst_fragment_line"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/main_color"/>

        <View
            android:id="@+id/view_sec_fragment_line"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
    </LinearLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_class_detail"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/ll_line"/>
</RelativeLayout>