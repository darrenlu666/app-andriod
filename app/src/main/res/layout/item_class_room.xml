<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/rl_item_class"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:orientation="vertical">

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="@dimen/list_image_length"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:layout_marginLeft="10dp"
        tools:text="一"
        android:textColor="@color/main_color"
        android:textSize="20sp"
        android:textStyle="bold"/>

    <View
        android:id="@+id/division_line"
        android:layout_width="0.1dp"
        android:layout_height="40dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_toRightOf="@+id/tv_time"
        android:background="@color/video_item_press"/>

    <TextView
        android:id="@+id/tv_school_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_toRightOf="@+id/division_line"
        android:singleLine="true"
        android:textSize="@dimen/list_first_content_item_size"
        tools:text="舒城县王烈桥中心王烈桥中心小学dfaadfasdfa"/>

    <TextView
        android:id="@+id/tv_class_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_school_name"
        android:layout_margin="5dp"
        android:layout_toRightOf="@+id/division_line"
        android:layout_toLeftOf="@+id/tv_status"
        tools:text="六年级/语文/张三三张三三张三三张三三张三三张三三"
        android:singleLine="true"/>

    <TextView
        android:id="@+id/tv_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/tv_school_name"
        android:background="@drawable/status_starting"
        android:paddingLeft="8dp"
        android:layout_marginTop="5dp"
        android:textColor="@color/white"
        android:textSize="12sp"
        tools:text="正在直播"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.05dp"
        android:layout_below="@id/tv_class_detail"
        android:layout_marginTop="10dp"
        android:background="@color/video_item_press"/>

</RelativeLayout>