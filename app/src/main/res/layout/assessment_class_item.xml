<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/assessment_item_image"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp" />
    <TextView
        android:id="@+id/assessment_item_text_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/assessment_item_image"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_toEndOf="@id/assessment_item_image"
        android:layout_toRightOf="@id/assessment_item_image"
        android:ellipsize="end"
        android:singleLine="true"
        tools:text="小学生同步作文课堂系列"
        android:textColor="@color/personal_text_color_content"
        android:textSize="@dimen/assessment_class_item_text_title" />
    <TextView
        android:id="@+id/assessment_item_text_subject"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/assessment_item_text_title"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        tools:text="学科 语文"
        android:textColor="@color/personal_text_color"
        android:textSize="@dimen/assessment_class_item_text_teacher" />

    <TextView
        android:id="@+id/assessment_item_text_teacher"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/assessment_item_text_title"
        android:layout_alignStart="@id/assessment_item_text_title"
        android:layout_below="@id/assessment_item_text_title"
        android:layout_toRightOf="@id/assessment_item_text_subject"
        android:layout_toLeftOf="@id/assessment_item_text_subject"
        android:layout_marginTop="5dp"
        android:ellipsize="end"
        android:singleLine="true"
        tools:text="主讲教师  李四李四李四李四李四李四李四李四李四李四李四李四李四李四李四李四李四"
        android:textColor="@color/personal_text_color"
        android:textSize="@dimen/assessment_class_item_text_teacher" />
    <TextView
        android:id="@+id/assessment_item_text_seq"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/assessment_item_text_teacher"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:ellipsize="end"
        android:singleLine="true"
        tools:text="第一节课"
        android:textColor="@color/personal_text_color"
        android:textSize="@dimen/assessment_class_item_text_teacher" />
    <TextView
        android:id="@+id/assessment_item_text_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/assessment_item_text_teacher"
        android:layout_below="@id/assessment_item_text_teacher"
        android:layout_toLeftOf="@id/assessment_item_text_seq"
        tools:text="2015/03/07 第三节课"
        android:textColor="@color/personal_text_color"
        android:textSize="@dimen/assessment_class_item_text_teacher" />

    <RatingBar
        android:id="@+id/assessment_item_text_rating"
        style="?android:attr/ratingBarStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/assessment_item_text_teacher"
        android:layout_below="@id/assessment_item_text_teacher"
        android:numStars="5"
        android:progressDrawable="@drawable/ratingbar_drawable"
        android:rating="4.5"
        android:stepSize="0.5"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_alignLeft="@id/assessment_item_text_date"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="8dp"
        android:background="#e9e9e9" />

</RelativeLayout>