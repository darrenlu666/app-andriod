<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".weibo.controllers.activities.WeiBoImageActivity">


    <RelativeLayout
        android:id="@+id/weibo_image_root_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black">

        <android.support.v4.view.ViewPager
            android:id="@+id/weibo_iamge_viewpager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone" />


    </RelativeLayout>

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/weibo_image_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:placeholderImage="@drawable/placeholder_img" />

    <RelativeLayout
        android:id="@+id/rltControlTitle"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:orientation="horizontal">

        <!--  <ImageButton
              android:layout_width="36dp"
              android:layout_height="36dp"
              android:background="@null"
              android:onClick="onBackClick"
              android:scaleType="centerInside"
              android:src="@drawable/back_video" />-->

        <TextView
            android:id="@+id/weibo_iamge_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerInParent="true"
            android:background="@drawable/weibo_showimage_title"
            android:padding="5dp"
            android:text="0/0"
            android:textColor="@color/white" />
    </RelativeLayout>
</RelativeLayout>
