<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context=".homework.controllers.activities.WorkStatisticDetailActivity">

    <include layout="@layout/toolbar_layout" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/user_bg_color"
        android:fillViewport="true"
        android:orientation="vertical"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/user_bg_color"
            android:orientation="vertical">

            <RelativeLayout
                style="@style/style_work_statistic_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    style="@style/txt_work_left"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/work_info_subject" />

                <TextView
                    android:id="@+id/tv_work_info_subject"
                    style="@style/txt_work_right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:background="@color/user_bg_color" />

            <RelativeLayout
                style="@style/style_work_statistic_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    style="@style/txt_work_left"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/work_info_reader" />

                <TextView
                    android:id="@+id/tv_work_info_reader"
                    style="@style/txt_work_right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:background="@color/user_bg_color" />

            <RelativeLayout
                style="@style/style_work_statistic_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_work_info_submit_title"
                    style="@style/txt_work_left"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/work_info_submit" />

                <TextView
                    android:id="@+id/tv_work_info_submit"
                    style="@style/txt_work_right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/tv_work_info_submit_title"
                    tools:text="adsfasdfasdfdsfsdfsasdfafasdfasfadasfsdfsdfasf
                    sdfasdfadsfasdfadfdasdfasdfasdfdsfafsdfadsfadsffadfafadfdf
                    asfdadfasdfasdfafdfasdfaffasfadadfadfafdsdfasdfafadfadfasdf" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:background="@color/user_bg_color" />

            <RelativeLayout
                style="@style/style_work_statistic_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_work_info_not_submit_title"
                    style="@style/txt_work_left"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/work_info_not_submit" />

                <TextView
                    android:id="@+id/tv_work_info_not_submit"
                    style="@style/txt_work_right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/tv_work_info_not_submit_title"
                    tools:text="adsfasdfasdfdsfsdfsasdfafasdfasfadasfsdfsdfasf
                    sdfasdfadsfasdfadfdasdfasdfasdfdsfafsdfadsfadsffadfafadfdf
                    asfdadfasdfasdfafdfasdfaffasfadadfadfafdsdfasdfafadfadfasdf" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:background="@color/user_bg_color" />

            <RelativeLayout
                style="@style/style_work_statistic_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    style="@style/txt_work_left"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/work_info_assign_time" />

                <TextView
                    android:id="@+id/tv_work_info_assign_time"
                    style="@style/txt_work_right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:background="@color/user_bg_color" />


            <RelativeLayout
                style="@style/style_work_statistic_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    style="@style/txt_work_left"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/work_info_deadline" />

                <TextView
                    android:id="@+id/tv_work_info_deadline"
                    style="@style/txt_work_right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:background="@color/user_bg_color" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>