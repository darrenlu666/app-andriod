<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <FrameLayout
        android:id="@+id/video_frame_layout"
        android:layout_width="match_parent"
        android:layout_height="180dp">
    <com.codyy.erpsportal.commons.widgets.BnVideoLayout2
        android:id="@+id/bn_video_layout2"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    <TextView
        android:id="@+id/video_un_start_tip_tv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black"
        android:gravity="center"
        android:text="@string/tv_no_data_for_video"
        android:textColor="@color/white"
        android:visibility="gone"
        tools:visibility="visible"
        />
    <RelativeLayout
        android:id="@+id/rl_video_title"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/ll_top_title"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:background="#66000000">
            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:paddingLeft="10dp"
                android:src="@drawable/class_video_back" />
            <TextView
                android:id="@+id/tv_detail_title_tv"
                tools:text="惺惺惜惺惺学校"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:paddingLeft="10dp"
                android:maxLines="1"
                android:textColor="@color/white"
                android:textSize="16sp" />
        </LinearLayout>
        <com.codyy.erpsportal.commons.widgets.BNVideoControlView
            android:id="@+id/video_control"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:background="#66000000"/>
    </RelativeLayout>
    </FrameLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/tv_detail_title"
        android:padding="10dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingLeft="15dp"
        android:paddingRight="10dp"
        android:background="@color/user_bg_color"
        android:text="节目详情"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="4px"
        android:background="@color/main_green"
        android:layout_marginBottom="10dp"
        />
</LinearLayout>