<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="120dp"
    android:gravity="center_horizontal"
    android:minHeight="120dp"
    android:minWidth="100dp"
    android:orientation="vertical">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/class_room_simpledraweeview"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginTop="10dp"
        app:placeholderImage="@drawable/default_person_head" />

    <TextView
        android:id="@+id/class_room_text_name"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:gravity="center"
        android:text="hahahahahahahahahahahahahahahahahahahahahahahahahahahahahahahahahahahahahahahahahahahahahahahahahahahahahahahahahaha"
        android:textColor="@color/fistpageclass_gridview_item_textcolor"
        android:singleLine="true"
        android:maxLength="10"
        />
</LinearLayout>