    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:paddingBottom="16dp"
        >
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="更换头像"
            android:padding="16dp"
            android:textSize="17sp"
            android:textColor="@color/black"
            android:gravity="center_vertical"
            />
        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/divide_color"
            android:layout_below="@id/tv_title"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/divider"
            android:padding="8dp"
            android:background="@color/white"
            >
            <TextView
                android:id="@+id/tv_select_photos"
                style="@style/style_menu_item_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="从相册选择"
                />
            <TextView
                android:id="@+id/tv_take_photos"
                style="@style/style_menu_item_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_select_photos"
                android:text="拍照"
                android:layout_marginTop="20dp"
                />
            <TextView
                android:id="@+id/tv_cancel"
                style="@style/style_menu_item_text_exit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_take_photos"
                android:text="取消"
                android:layout_marginTop="20dp"
                />
        </RelativeLayout>
    </LinearLayout>

<!--</android.support.v4.widget.NestedScrollView>-->