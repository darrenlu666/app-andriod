<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/rl_info_sheet"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="8dp"
    android:paddingStart="8dp">

    <ImageView
        android:id="@+id/iv_little_trumpet"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:scaleType="centerInside"
        android:src="@drawable/ic_little_trumpet"
        android:contentDescription="@null"/>

    <TextSwitcher
        android:id="@+id/ts_info"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/iv_little_trumpet"
        android:layout_toEndOf="@id/iv_little_trumpet"
        android:layout_alignTop="@id/iv_little_trumpet"
        android:layout_alignBottom="@id/iv_little_trumpet"
        android:inAnimation="@anim/slide_in_from_bottom"
        android:outAnimation="@anim/slide_out_to_top">
    </TextSwitcher>
</RelativeLayout>