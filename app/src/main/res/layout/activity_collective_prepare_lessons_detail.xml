<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/md_white_1000">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/md_white_1000"
        android:orientation="vertical">

        <include layout="@layout/toolbar_layout" />

        <ScrollView
            android:id="@+id/scrollView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="?actionBarSize"
            android:background="@color/md_white_1000">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_active_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_margin="10dp"
                        android:text="活动主题名称"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:id="@+id/lin_initiator"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tv_active_name"
                        android:layout_centerHorizontal="true"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_launcher"
                            style="@style/collective_prepare_text_style"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_toRightOf="@+id/tv_launch_text"
                            android:gravity="right"
                            android:padding="5dp"
                            tools:text="星海小学星海小学星海小学星海小学星海小学星海小学"
                            android:maxWidth="@dimen/net_teach_launch_limit"
                            />

                        <TextView
                            android:id="@+id/tv_launch_time"
                            style="@style/collective_prepare_text_style"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="10dp"
                            android:padding="5dp"
                            tools:text="2014/02/04 12:34" />
                    </LinearLayout>

                    <View
                        android:id="@+id/divider1"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_below="@id/lin_initiator"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="10dp"
                        android:background="@color/divide_color" />

                    <TextView
                        android:id="@+id/tv_reserve_desc"
                        style="@style/collective_prepare_lesson_detail_title_text"
                        android:layout_below="@id/divider1"
                        android:text="@string/time_prepared" />

                    <TextView
                        android:id="@+id/tv_reserve_start_time"
                        style="@style/collective_prepare_lesson_detail_value_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/divider1"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@id/tv_reserve_desc"
                        tools:text="2015/01/10 0:00 " />

                    <TextView
                        android:id="@+id/tv_reserve_time_text"
                        style="@style/collective_prepare_lesson_detail_value_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/divider1"
                        android:layout_marginLeft="5dp"
                        android:layout_toRightOf="@+id/tv_reserve_start_time"
                        android:text="至" />

                    <TextView
                        android:id="@+id/tv_reserve_end_time"
                        style="@style/collective_prepare_lesson_detail_value_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/divider1"
                        android:layout_marginLeft="5dp"
                        android:layout_toRightOf="@+id/tv_reserve_time_text"
                        tools:text="2015/01/10 0:00 " />

                    <TextView
                        android:id="@+id/tv_real_start_time_text"
                        style="@style/collective_prepare_lesson_detail_title_text"
                        android:layout_below="@+id/tv_reserve_start_time"
                        android:text="@string/time_start" />

                    <TextView
                        android:id="@+id/tv_real_start_time"
                        style="@style/collective_prepare_lesson_detail_value_text"
                        android:layout_below="@+id/tv_reserve_start_time"
                        android:layout_toRightOf="@+id/tv_real_start_time_text"
                        tools:text="2015/01/10 0:00" />

                    <TextView
                        android:id="@+id/tv_school_name_text"
                        style="@style/collective_prepare_lesson_detail_title_text"
                        android:layout_below="@+id/tv_real_start_time"
                        android:text="学校"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/tv_school_name"
                        style="@style/collective_prepare_lesson_detail_value_text"
                        android:layout_below="@+id/tv_real_start_time"
                        android:layout_toRightOf="@+id/tv_school_name_text"
                        android:text="安徽省合肥市肥东县第一中心小学"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/tv_star_name_text"
                        style="@style/collective_prepare_lesson_detail_title_text"
                        android:layout_below="@+id/tv_school_name_text"
                        android:text="评分" />

                    <RatingBar
                        android:id="@+id/rb_star"
                        style="?android:attr/ratingBarStyleSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_school_name"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="12dp"
                        android:layout_toRightOf="@id/tv_star_name_text"
                        android:numStars="5"
                        android:minHeight="13dp"
                        android:progressDrawable="@drawable/ratingbar_drawable"
                        android:rating="0"
                        android:stepSize="0.5" />

                    <TextView
                        android:id="@+id/tv_grade_text"
                        style="@style/collective_prepare_lesson_detail_title_text"
                        android:layout_below="@+id/tv_star_name_text"
                        android:text="年级" />

                    <TextView
                        android:id="@+id/tv_grade_name"
                        style="@style/collective_prepare_lesson_detail_value_text_no_single_line"
                        android:layout_below="@+id/tv_star_name_text"
                        android:layout_toRightOf="@+id/tv_star_name_text"
                        tools:text="一年级 一年级 一年级 一年级 一年级 一年级 一年级 一年级 一年级 一年级 一年级 一年级 一年级 一年级 " />

                    <TextView
                        android:id="@+id/tv_subject_text"
                        style="@style/collective_prepare_lesson_detail_title_text"
                        android:layout_below="@+id/tv_grade_name"
                        android:text="学科" />

                    <TextView
                        android:id="@+id/tv_subject_name"
                        style="@style/collective_prepare_lesson_detail_value_text"
                        android:layout_below="@+id/tv_grade_name"
                        android:layout_toRightOf="@+id/tv_subject_text"
                        tools:text="语文" />

                    <View
                        android:id="@+id/divider2"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_below="@id/tv_subject_name"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="10dp"
                        android:background="@color/divide_color" />

                    <TextView
                        android:id="@+id/tv_active_profile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/divider2"
                        android:layout_marginLeft="10dp"
                        android:text="活动简介"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_active_msg_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_active_profile"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="10dp"
                        android:textSize="16sp"
                        tools:text="林老师发起的互动听课" />


                    <View
                        android:id="@+id/divider3"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_below="@id/tv_active_msg_value"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="10dp"
                        android:background="@color/divide_color" />

                    <TextView
                        android:id="@+id/tv_speaker_school"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/divider3"
                        android:layout_marginLeft="10dp"
                        android:text="主备学校"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_main_school_name_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_speaker_school"
                        android:text="" />

                    <TextView
                        android:id="@+id/tv_main_school_name"
                        style="@style/collective_prepare_lesson_detail_value_text"
                        android:layout_below="@+id/tv_speaker_school"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@+id/tv_main_school_name_text"
                        tools:text="安徽省合肥市肥东县第一中心小学" />

                    <TextView
                        android:id="@+id/tv_prepare_lesson_room_text"
                        style="@style/collective_prepare_lesson_detail_title_text"
                        android:layout_below="@+id/tv_main_school_name"
                        android:text="备课室" />

                    <TextView
                        android:id="@+id/tv_prepare_lesson_room"
                        style="@style/collective_prepare_lesson_detail_value_text"
                        android:layout_below="@+id/tv_main_school_name"
                        android:layout_toRightOf="@+id/tv_prepare_lesson_room_text"
                        tools:text="备课室1" />


                    <TextView
                        android:id="@+id/tv_prepare_people_name_text"
                        style="@style/collective_prepare_lesson_detail_title_text"
                        android:layout_below="@+id/tv_prepare_lesson_room_text"
                        android:text="主备教师" />

                    <TextView
                        android:id="@+id/tv_prepare_people_name"
                        style="@style/collective_prepare_lesson_detail_value_text"
                        android:layout_below="@+id/tv_prepare_lesson_room"
                        android:layout_toRightOf="@+id/tv_prepare_people_name_text"
                        tools:text="王老师" />

                    <TextView
                        android:id="@+id/tv_prepare_attend_text"
                        style="@style/collective_prepare_lesson_detail_title_text"
                        android:layout_below="@+id/tv_prepare_people_name"
                        android:text="参与者"
                        />

                    <TextView
                        android:id="@+id/tv_prepare_attend"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_prepare_people_name"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_toRightOf="@+id/tv_prepare_people_name_text"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        tools:text="王老师王老师王老师王老王老师王老师王老师王老师师王老师王老师王老师王老师王老师王老师王老师" />
                </RelativeLayout>

                <View
                    android:id="@+id/divider4"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/divide_color" />
                <!-- 参会者-->
                <TextView
                    android:id="@+id/tv_receive_school_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="参与机构"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <com.codyy.erpsportal.commons.widgets.RecyclerView.FixedRecyclerView
                    android:id="@+id/lv_receive_school"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:cacheColorHint="#00000000" />

                <View
                    android:id="@+id/divider5"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/divide_color" />
                <!-- &lt;!&ndash;听课端&ndash;&gt;
                 <TextView
                     android:id="@+id/tv_listen_desc"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:layout_marginLeft="10dp"
                     android:text="听课端"
                     android:textColor="@color/black"
                     android:textSize="18sp"
                     android:textStyle="bold"
                     />
                 <com.codyy.erpsportal.commons.widgets.RecyclerView.FixedRecyclerView
                     android:id="@+id/lv_listen"
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:layout_marginTop="5dp"
                     android:cacheColorHint="#00000000"
                     android:divider="@null"
                     />
                 <View
                     android:id="@+id/divider6"
                     android:layout_width="match_parent"
                     android:layout_height="1dp"
                     android:layout_below="@id/tv_active_msg_value"
                     android:background="@color/divide_color"
                     android:layout_marginTop="10dp"
                     android:layout_marginBottom="10dp"
                     />-->
                <!-- 有录制权限-->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="录制权限"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <com.codyy.erpsportal.commons.widgets.RecyclerView.FixedRecyclerView
                    android:id="@+id/lv_priority"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:cacheColorHint="#00000000" />

                <View
                    android:id="@+id/divider6"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@id/tv_active_msg_value"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/divide_color" />
                <!-- 相关文档-->
                <TextView
                    android:id="@+id/tv_document_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="相关文档"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <com.codyy.erpsportal.commons.widgets.RecyclerView.FixedRecyclerView
                    android:id="@+id/lv_document"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:cacheColorHint="#00000000"
                    android:divider="@null"
                    android:focusable="false"
                    android:listSelector="#00000000" />

                <View
                    android:id="@+id/divider7"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@id/tv_active_msg_value"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/divide_color" />
                <!-- 备课成果-->
                <TextView
                    android:id="@+id/tv_product"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="备课成果"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <com.codyy.erpsportal.commons.widgets.RecyclerView.FixedRecyclerView
                    android:id="@+id/lv_product"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:cacheColorHint="#00000000"
                    android:divider="@null"
                    android:focusable="false"
                    android:listSelector="#00000000" />
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rl_state"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_gravity="bottom"
        android:background="#99000000">

        <TextView
            android:id="@+id/tv_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:drawableLeft="@drawable/xxhdpi_init_"
            android:text=""
            android:textColor="@color/white"
            android:textSize="17sp" />
    </RelativeLayout>

    <com.codyy.erpsportal.commons.widgets.EmptyView
        android:id="@+id/empty_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="?actionBarSize"
        android:background="@color/white"
        android:visibility="gone" />
</FrameLayout>