<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="@color/main_green">

    <Button
        android:id="@+id/btn_back"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:background="@drawable/back_btn_bg"
        android:textColor="@color/md_white_1000" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:text="@string/collective_prepare_lessons"
        android:textColor="@color/md_white_1000"
        android:textSize="@dimen/layout_title_text_size" />

    <com.codyy.erpsportal.commons.widgets.components.FilterButton
        android:id="@+id/btn_filter"
        style="@style/MixBtnInLeftOfTitleBar"/>

    <include layout="@layout/title_bottom_line" />
</RelativeLayout>
