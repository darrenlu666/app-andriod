<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/evaluation_list_item_image"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        app:failureImage="@drawable/placeholderimage_head"
        app:roundAsCircle="true" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/evaluation_list_item_text_name"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:text="张老师"
                android:textColor="#333333"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/evaluation_list_item_text_time"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:text="2分钟前"
                android:textColor="#707070"
                android:textSize="12dp" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="10dp">

                <RatingBar
                    android:id="@+id/evaluation_list_item_tatingbar"
                    style="@style/my_ratingbar"
                    android:layout_width="wrap_content"
                    android:layout_height="15dp"
                    android:isIndicator="true"
                    android:numStars="5"
                    android:rating="2.5" />

                <TextView
                    android:id="@+id/evaluation_list_item_myscore"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="打分"
                    android:textColor="@color/green"
                    android:textSize="9dp"
                    android:visibility="gone" />
            </RelativeLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/evaluation_list_item_text_cont"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:text="哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈好好好好好呵呵呵呵呵呵呵呵呵呵呵哈好好好好好呵呵呵呵呵呵呵呵呵呵呵"
            android:textColor="#333333"
            android:textSize="13dp" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:layout_marginTop="10dp"
            android:background="@color/personal_divide_line" />
    </LinearLayout>
</LinearLayout>