<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


    <TextView
        android:id="@+id/tv_school_text"
        android:text="学校    "
        style="@style/collective_prepare_lesson_detail_title_text"
        android:visibility="gone"
        />

    <TextView
        android:id="@+id/tv_school_name"
        android:text="安徽省合肥市肥东县第一中心小学"
        android:layout_toRightOf="@+id/tv_school_text"
        style="@style/collective_prepare_lesson_detail_value_text"
        android:layout_marginLeft="25dp"
        />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_prepare_room"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_lesson_room_text"
        android:text="备课室"
        style="@style/collective_prepare_lesson_detail_title_text"
        />

    <TextView
        android:id="@+id/tv_lesson_room"
        android:text="备课室1"
        android:layout_toRightOf="@+id/tv_lesson_room_text"
        style="@style/collective_prepare_lesson_detail_value_text"
        />

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_attend_metting_text"
        android:text="参会者"
        style="@style/collective_prepare_lesson_detail_title_text"
        />

    <TextView
        android:id="@+id/tv_attend_metting_people"
        android:text="张一，张一，张一，张一，张一，张一，张一，张一，张一，张一，张一，张一，张一，张一"
        android:layout_toRightOf="@+id/tv_attend_metting_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:textSize="15sp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="10dp"
        android:textColor="@color/black"
        />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_marginTop="10dp"
        android:background="#f2f2f2"
        android:layout_below="@+id/tv_attend_metting_people"/>
</LinearLayout>
