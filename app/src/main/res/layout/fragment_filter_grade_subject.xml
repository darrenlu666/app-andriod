<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="horizontal">

    <ListView
        android:id="@+id/fragment_filter_grade_subject_leftlistview"
        android:layout_width="105dp"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        android:divider="@color/divide_color"
        android:dividerHeight="1px"
        android:listSelector="@android:color/transparent" />

    <View
        android:layout_width="1px"
        android:layout_height="match_parent"
        android:background="@color/divide_color" />

    <LinearLayout
        android:layout_width="146dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/fragment_filter_grade_subject_grade"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/fragment_filter_text_grade"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:ellipsize="marquee"
                android:focusableInTouchMode="true"
                android:gravity="center"
                android:marqueeRepeatLimit="marquee_forever"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:scrollHorizontally="true"
                android:singleLine="true"
                android:text="全部"
                android:textColor="#19ab20"
                android:textSize="@dimen/filter_name_size" />

            <TextView
                android:layout_width="80dp"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_weight="1"
                android:gravity="center"
                android:minWidth="100dp"
                android:layout_marginRight="10dp"
                android:text="年级"
                android:background="@drawable/filter_button_bg"
                android:textSize="@dimen/filter_type_size" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/divide_color" />

        <LinearLayout
            android:id="@+id/fragment_filter_grade_subject_subject"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/fragment_filter_text_subject"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:ellipsize="marquee"
                android:focusableInTouchMode="true"
                android:gravity="center"
                android:marqueeRepeatLimit="marquee_forever"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:scrollHorizontally="true"
                android:singleLine="true"
                android:text="全部"
                android:textColor="#19ab20"
                android:textSize="@dimen/filter_name_size" />

            <TextView
                android:layout_width="80dp"
                android:layout_height="20dp"
                android:layout_weight="1"
                android:gravity="center"
                android:minWidth="100dp"
                android:text="学科"
                android:layout_marginRight="10dp"
                android:background="@drawable/filter_button_bg"
                android:textSize="@dimen/filter_type_size" />
        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/divide_color" />

        <LinearLayout
            android:id="@+id/fragment_filter_grade_subject_status"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/fragment_filter_text_status"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:ellipsize="marquee"
                android:focusableInTouchMode="true"
                android:gravity="center"
                android:marqueeRepeatLimit="marquee_forever"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:scrollHorizontally="true"
                android:singleLine="true"
                android:text="全部"
                android:textColor="#19ab20"
                android:textSize="@dimen/filter_name_size" />

            <TextView
                android:layout_width="80dp"
                android:layout_height="20dp"
                android:layout_weight="1"
                android:gravity="center"
                android:minWidth="100dp"
                android:layout_marginRight="10dp"
                android:text="状态"
                android:background="@drawable/filter_button_bg"
                android:textSize="@dimen/filter_type_size" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>