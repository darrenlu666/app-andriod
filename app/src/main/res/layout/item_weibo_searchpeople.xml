<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:minHeight="100dp"
    android:padding="10dp">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/simpledraweeview_searchpeople"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerVertical="true"
        app:actualImageScaleType="fitCenter"
        app:placeholderImage="@drawable/placeholderimage_head" />


    <TextView
        android:id="@+id/searchpeople_school"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/simpledraweeview_searchpeople"
        android:singleLine="true"
        android:text="xxx中学"
        android:textColor="@color/list_item_body"
        android:textSize="@dimen/list_item_body" />

    <TextView
        android:id="@+id/searchpeople_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/searchpeople_school"
        android:layout_marginBottom="3dp"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/simpledraweeview_searchpeople"
        android:singleLine="true"
        android:text="王玉磊"
        android:textColor="@color/list_item_title"
        android:textSize="@dimen/list_item_title" />

    <TextView
        android:id="@+id/searchpeople_grade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/searchpeople_school"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="3dp"
        android:layout_toRightOf="@id/simpledraweeview_searchpeople"
        android:singleLine="true"
        android:text="6nianji"
        android:textColor="@color/list_item_body"
        android:textSize="@dimen/list_item_body" />

    <ImageView
        android:id="@+id/searchpeople_setting"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:scaleType="center"
        android:src="@drawable/weibo_setting" />

    <Button
        android:id="@+id/searchpeople_following"
        android:layout_width="40dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/weibo_follow_bg"
        android:text="+关注"
        android:textColor="@color/white"
        android:textSize="13sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_alignParentBottom="true"
        android:background="@color/divider" />
</RelativeLayout>