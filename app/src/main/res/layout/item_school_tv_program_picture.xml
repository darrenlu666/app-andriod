<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/rl_item_class"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:orientation="horizontal"
                android:paddingTop="20dp"
    android:paddingBottom="20dp"
    android:paddingLeft="16dp"
    >
    <com.codyy.erpsportal.commons.widgets.AspectRatioDraweeView
        android:id="@+id/sdv"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center_horizontal"
        app:aspectRatio="0.5625"
        app:aspectRatioEnabled="true"
        app:dominantMeasurement="width"
        app:placeholderImage="@drawable/icon_default_video"
        android:layout_weight="2"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        >
        <TextView
            android:id="@+id/school_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="5dp"
            android:maxLines="1"
            style="@style/ListItemTitle"
            tools:text="舒城县王烈桥中心王烈桥中心小学dfaadfasdfa"/>

        <TextView
            android:id="@+id/status_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/school_name_tv"
            android:background="@drawable/ic_tag_on_yellow"
            android:paddingLeft="12dp"
            android:layout_marginTop="5dp"
            android:gravity="center_vertical"
            android:textColor="@color/white"
            android:textSize="10sp"
            tools:text="进行中"/>

        <TextView
            android:id="@+id/class_detail_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_toLeftOf="@id/status_tv"
            android:layout_below="@id/status_tv"
            tools:text="六年级/语文/张三三"
            android:maxLines="1"/>
    </RelativeLayout>
</LinearLayout>