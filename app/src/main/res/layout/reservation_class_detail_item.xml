<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/reservation_class_detail_image"
        android:layout_width="38dp"
        android:layout_height="38dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp" />

    <TextView
        android:id="@+id/reservation_class_detail_text_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/reservation_class_detail_image"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_toEndOf="@id/reservation_class_detail_image"
        android:layout_toRightOf="@id/reservation_class_detail_image"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="小学生同步作文课堂系列"
        android:textColor="@color/personal_text_color_content"
        android:textSize="@dimen/assessment_class_item_text_title" />

    <TextView
        android:id="@+id/reservation_class_detail_text_teacher"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/reservation_class_detail_image"
        android:layout_alignLeft="@id/reservation_class_detail_text_title"
        android:layout_alignStart="@id/reservation_class_detail_text_title"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="节次 一"
        android:textColor="@color/personal_text_color"
        android:textSize="@dimen/assessment_class_item_text_teacher" />

    <TextView
        android:id="@+id/assessment_item_text_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/reservation_class_detail_text_teacher"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_toRightOf="@id/reservation_class_detail_text_teacher"
        android:singleLine="true"
        android:text="2015/03/07 第三节课"
        android:textColor="@color/personal_text_color"
        android:textSize="@dimen/assessment_class_item_text_teacher" />


    <TextView
        android:id="@+id/reservation_class_detail_text_subject"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/reservation_class_detail_text_teacher"
        android:layout_marginRight="10dp"
        android:text="语文"
        android:textColor="@color/personal_text_color"
        android:textSize="@dimen/assessment_class_item_text_teacher" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_alignLeft="@id/reservation_class_detail_text_title"
        android:layout_below="@id/reservation_class_detail_text_subject"
        android:layout_marginTop="2dp"
        android:background="#e9e9e9" />
</RelativeLayout>