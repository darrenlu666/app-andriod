<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/lin_root_view"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@color/white"
    >
    <include layout="@layout/toolbar_layout"/>
    <FrameLayout
        android:id="@+id/fl_content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        >
        <ScrollView
            android:id="@+id/scroll_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="Title"
                        android:textSize="@dimen/poe_txt_size_head"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:layout_margin="10dp"
                        />
                    <RelativeLayout
                        android:id="@+id/rlt_temp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tv_title"
                        >
                        <TextView
                            android:id="@+id/tv_creator"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:text="creator"
                            android:textSize="17sp"
                            android:textColor="@color/md_grey_500"
                            android:layout_alignParentTop="true"
                            android:layout_alignLeft="@+id/tv_create_time"
                            android:layout_alignStart="@+id/tv_create_time"
                            />
                        <TextView
                            android:id="@+id/tv_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:text="3"
                            android:layout_toRightOf="@id/tv_creator"
                            android:gravity="center"
                            android:textSize="17sp"
                            android:textColor="@color/md_grey_500"
                            android:layout_marginLeft="10dp"
                            android:drawableLeft="@drawable/ic_blog_view_count"
                            />
                        <TextView
                            android:id="@+id/tv_category"
                            tools:text="分类分类分类分类"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="17sp"
                            android:textColor="@color/md_grey_500"
                            android:maxLines="1"
                            android:layout_alignParentTop="true"
                            android:layout_toRightOf="@+id/tv_count"
                            android:layout_toEndOf="@+id/tv_count"
                            android:ellipsize="end"
                            android:drawableLeft="@drawable/ic_blog_category"
                            android:drawablePadding="5dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginLeft="10dp"
                            />
                        <TextView
                            android:id="@+id/tv_create_time"
                            tools:text="2016-04-08 12:00:00"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/tv_creator"
                            android:textSize="17sp"
                            android:textColor="@color/md_grey_500"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="@dimen/poe_desc_margin_top"
                            android:maxLines="1"
                            />
                    </RelativeLayout>

                    <View
                        android:id="@+id/divider_title"
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:layout_below="@id/rlt_temp"
                        android:background="@color/divide_color"
                        />
                    <!--视频/音频-->
                    <com.codyy.erpsportal.commons.widgets.BnMediaPlayLayout
                        android:id="@+id/bn_media_view"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:layout_below="@id/divider_title"
                        android:layout_margin="10dp"
                        android:visibility="gone"
                        />
                </RelativeLayout>
                <WebView
                    android:id="@+id/web_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    />
            </LinearLayout>
        </ScrollView>
        <RelativeLayout
            android:id="@+id/rlt_layout_comment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:visibility="gone"
            >
        <RelativeLayout
            android:id="@+id/rlt_comment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <TextView
                android:id="@+id/tv_all_comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="全部评论"
                android:textColor="@color/md_grey_500"
                android:textSize="17sp"
                android:layout_margin="10dp"
                android:layout_centerVertical="true"
                />
            <TextView
                android:id="@+id/tv_comment_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/tv_all_comment"
                android:text="（22）"
                android:textColor="@color/md_grey_500"
                android:textSize="17sp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:layout_centerVertical="true"
                />
            <TextView
                android:id="@+id/tv_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="9.8分"
                android:textColor="@color/md_grey_500"
                android:textSize="17sp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:layout_centerVertical="true"
                />
            <RatingBar
                android:id="@+id/rb_star"
                style="?android:attr/ratingBarStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:minHeight="13dp"
                android:numStars="5"
                android:progressDrawable="@drawable/ratingbar_drawable"
                android:rating="4"
                android:stepSize="0.5"
                android:layout_toLeftOf="@id/tv_score"
                android:layout_centerVertical="true"
                />
            </RelativeLayout>
            <View
                android:id="@+id/divider"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginTop="5dp"
                android:background="@color/divide_color"
                android:layout_below="@id/rlt_comment"
                />
            <com.codyy.erpsportal.commons.widgets.RefreshLayout
                android:id="@+id/refresh_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/divider"
                >
            <com.codyy.erpsportal.commons.widgets.RecyclerView.SimpleRecyclerView
                android:id="@+id/simple_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                />
            </com.codyy.erpsportal.commons.widgets.RefreshLayout>
        </RelativeLayout>
    </FrameLayout>
     <com.codyy.erpsportal.commons.widgets.BlogComposeView
         android:id="@+id/compose"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         />
</LinearLayout>