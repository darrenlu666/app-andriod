<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:orientation="horizontal"
    >
    <ImageView
        android:id="@+id/img_item_delete"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:scaleType="fitXY"
        android:padding="15dp"
        android:src="@drawable/ic_red_delete"
        android:background="@drawable/default_btn_selector"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        />

    <TextView
        android:id="@+id/txt_item_title"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:ellipsize="end"
        android:singleLine="true"
        tools:text="屏幕截图2015-09-07屏幕截图2015-09-07屏幕截图2015-09-07屏幕截图2015-09-07屏幕截图2015-09-07屏幕截图2015-09-07.png"
        android:paddingLeft="5dp"
        android:gravity="center_vertical"
        android:background="@drawable/default_btn_selector"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/img_item_delete"
        />

</RelativeLayout>