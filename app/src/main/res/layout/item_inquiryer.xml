<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="15dp">

    <ImageView
        android:id="@+id/iv_avatar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:contentDescription="@null"
        android:src="@drawable/ic_inquiryer" />

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:layout_toLeftOf="@id/iv_avatar"
        android:layout_toStartOf="@id/iv_avatar"
        android:textColor="#666666"
        android:textSize="12dp"
        tools:text="2015-08-15 15:30" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_time"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="8dp"
        android:layout_toLeftOf="@id/iv_avatar"
        android:layout_toStartOf="@id/iv_avatar"
        android:background="@drawable/chat_to_bg_normal"
        android:padding="8dp"
        android:paddingEnd="11dp"
        android:paddingRight="11dp"
        android:orientation="vertical"
        android:layout_marginStart="35dp"
        android:layout_marginLeft="35dp"
        android:showDividers="middle"
        android:divider="@drawable/dv_h_dp8">

        <TextView
            android:id="@+id/tv_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#333333"
            android:textSize="13dp"
            tools:text="我们已经跟进处理我进处进处进处进处进处进处进处进处进处进处进处进处进处进处进处进处进处进处33333333333333333333333333333"
            android:layout_gravity="right|end"/>

        <com.google.android.flexbox.FlexboxLayout
            android:id="@+id/fbl_images_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:showDivider="middle"
            app:dividerDrawable="@drawable/dv_vh_dp8"
            app:flexWrap="wrap" />
    </LinearLayout>
</RelativeLayout>
