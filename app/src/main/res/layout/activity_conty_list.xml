<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              tools:context="com.codyy.erpsportal.county.controllers.activities.CountyListActivity">

    <include layout="@layout/title_layout_filter"/>

    <android.support.v4.widget.DrawerLayout
        android:id="@+id/drawerlayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/title_bar_shadow"/>

            <com.codyy.erpsportal.commons.widgets.SlidingTabLayout
                android:id="@+id/conty_list_sliding"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#fff"
                android:textSize="16dp"
                app:tabPadding="2dp"/>

            <android.support.v4.view.ViewPager
                android:id="@+id/conty_lsit_viewpager"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/conty_list_sliding"
                android:background="@android:color/white"/>
        </RelativeLayout>

        <FrameLayout
            android:id="@+id/filter_fragment"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            tools:layout="@layout/select_layout"/>
    </android.support.v4.widget.DrawerLayout>
</LinearLayout>
