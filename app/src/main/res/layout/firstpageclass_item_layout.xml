<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?selectableItemBackground"
    android:padding="8dp">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/firstpageclass_item_simpledraweeview"
        android:layout_width="150dp"
        android:layout_height="90dp"
        android:layout_centerHorizontal="true"
        app:placeholderImage="@drawable/placeholder_img"/>

    <TextView
        android:id="@+id/firstpageclass_item_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/firstpageclass_item_simpledraweeview"
        android:layout_below="@id/firstpageclass_item_simpledraweeview"
        android:layout_marginTop="9dp"
        android:singleLine="true"
        android:textColor="@color/fistpageclass_gridview_item_textcolor"
        android:textSize="15sp"
        tools:text="第一个第一课"/>
</RelativeLayout>