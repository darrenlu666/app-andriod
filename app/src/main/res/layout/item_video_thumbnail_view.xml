<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:android_custom="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fl_video_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/sd_video_task_view"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:background="@drawable/video_loading" />
    <!--android:background="@drawable/video_loading"-->


    <ImageView
        android:id="@+id/iv_controller"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:src="@drawable/task_video_play"
        android:visibility="gone" />

    <com.codyy.erpsportal.homework.widgets.ProgressCircle
        android:id="@+id/pc_video_progress"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:visibility="gone"
        android_custom:progressAreaColor="#96F7F9F7"
        android_custom:ringColor="#96F7F9F7"
        android_custom:ringWidth="1dp" />

    <ImageView
        android:id="@+id/iv_video_upload_failure"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/video_upload_failure"
        android:clickable="true"
        android:visibility="gone"
        tools:visibility="visible" />

</FrameLayout>