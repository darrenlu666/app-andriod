<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/playing_gridview_item_iamge"
        android:layout_width="157dp"
        android:layout_height="86dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        app:placeholderImage="@drawable/placeholder_img" />


    <TextView
        android:id="@+id/playing_gridview_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@id/playing_gridview_item_iamge"
        android:layout_alignRight="@id/playing_gridview_item_iamge"
        android:layout_below="@id/playing_gridview_item_iamge"
        android:layout_marginTop="10dp"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="Small Text"
        android:textColor="#929292"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/playing_gridview_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/playing_gridview_item_iamge"
        android:layout_below="@id/playing_gridview_item_iamge"
        android:layout_marginTop="10dp"
        android:layout_toLeftOf="@id/playing_gridview_item_name"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="数学第一章"
        android:textColor="#333333"
        android:textSize="15sp" />
</RelativeLayout>