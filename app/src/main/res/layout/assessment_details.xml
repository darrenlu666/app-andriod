<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical">
    <include layout="@layout/toolbar_layout"/>
    <com.codyy.erpsportal.commons.widgets.EmptyView
        android:id="@+id/empty_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="?actionBarSize"
        android:background="@color/white"
        android:visibility="gone"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginBottom="?actionBarSize"
            >
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >
                    <TextView
                        android:id="@+id/tv_active_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="活动主题名称"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_margin="10dp"
                        android:layout_centerHorizontal="true"
                        />
                    <LinearLayout
                        android:id="@+id/lin_initiator"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_below="@id/tv_active_name"
                        android:layout_centerHorizontal="true"
                        >
                        <TextView
                            android:id="@+id/tv_launcher"
                            style="@style/collective_prepare_text_style"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_toRightOf="@+id/tv_launch_text"
                            android:gravity="right"
                            android:text="星海小学星海小学星海小学星海小学星海小学星海小学星海小学星海小学"
                            android:padding="5dp"
                            android:maxWidth="@dimen/net_teach_launch_limit"
                            />
                        <TextView
                            android:id="@+id/tv_launch_time"
                            style="@style/collective_prepare_text_style"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="10dp"
                            android:padding="5dp"
                            tools:text="2014/02/04 12:34"
                            />
                    </LinearLayout>
                    <View
                        android:id="@+id/divider1"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_below="@id/lin_initiator"
                        android:background="@color/divide_color"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        />
                    <TextView
                        android:id="@+id/tv_reserve_desc"
                        style="@style/collective_prepare_lesson_detail_title_text"
                        android:text="@string/time_active"
                        android:layout_below="@id/divider1"
                        />
                    <TextView
                        android:id="@+id/tv_reserve_start_time"
                        style="@style/collective_prepare_lesson_detail_value_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/tv_reserve_desc"
                        android:layout_marginLeft="10dp"
                        tools:text="2015/01/10 0:00 "
                        android:layout_below="@id/divider1"
                        />

                    <TextView
                        android:id="@+id/tv_reserve_time_text"
                        style="@style/collective_prepare_lesson_detail_value_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_toRightOf="@+id/tv_reserve_start_time"
                        android:text="至"
                        android:layout_below="@id/divider1"
                        />

                    <TextView
                        android:id="@+id/tv_reserve_end_time"
                        style="@style/collective_prepare_lesson_detail_value_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_toRightOf="@+id/tv_reserve_time_text"
                        tools:text="2015/01/10 0:00 "
                        android:layout_below="@id/divider1"
                        />
                    <View
                        android:id="@+id/divider2"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_below="@id/tv_reserve_desc"
                        android:background="@color/divide_color"

                        android:layout_marginBottom="10dp"
                        android:visibility="gone"
                        />

                    <TextView
                        android:id="@+id/tv_active_profile_desc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tv_reserve_desc"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:text="@string/active_requirement"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        />
                    <TextView
                        android:id="@+id/tv_active_profile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_active_profile_desc"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="10dp"
                        tools:text="林老师发起的评课一活动要求"
                        android:textSize="16sp"
                        />
                    <View
                        android:id="@+id/divider3"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_below="@id/tv_active_profile"
                        android:background="@color/divide_color"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        />
                    <TextView
                        android:id="@+id/tv_select_lesson_desc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="@string/active_select_lesson"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_below="@id/divider3"
                        />
                    <TextView
                        android:id="@+id/tv_main_school_name"
                        style="@style/collective_prepare_lesson_detail_value_text"
                        android:layout_below="@+id/tv_select_lesson_desc"
                        android:layout_toRightOf="@+id/tv_main_school_name_text"
                        android:text="安徽省合肥市肥东县第一中心小学"
                        android:layout_marginLeft="10dp"
                        />
                    <TextView
                        android:id="@+id/tv_main_group_desc"
                        style="@style/collective_prepare_lesson_detail_title_text"
                        android:layout_below="@+id/tv_main_school_name"
                        android:text="机构"
                        android:visibility="gone"
                        />
                    <TextView
                        android:id="@+id/tv_main_group"
                        style="@style/collective_prepare_lesson_detail_value_text"
                        android:layout_below="@+id/tv_main_school_name"
                        android:layout_toRightOf="@+id/tv_main_speaker_desc"
                        android:text="安徽省合肥市肥东县第一中心小学"
                        android:visibility="gone"
                        />
                    <TextView
                        android:id="@+id/tv_main_speaker_desc"
                        style="@style/collective_prepare_lesson_detail_title_text"
                        android:layout_below="@+id/tv_main_group_desc"
                        android:text="主讲教师"
                        />
                    <TextView
                        android:id="@+id/tv_main_speaker"
                        style="@style/collective_prepare_lesson_detail_value_text"
                        android:layout_below="@+id/tv_main_group_desc"
                        android:layout_toRightOf="@+id/tv_main_speaker_desc"
                        android:text="王老师"
                        />
                    <TextView
                        android:id="@+id/tv_grade_text"
                        style="@style/collective_prepare_lesson_detail_title_text"
                        android:layout_below="@+id/tv_main_speaker"
                        android:text="年级"
                        />

                    <TextView
                        android:id="@+id/tv_grade_name"
                        style="@style/collective_prepare_lesson_detail_value_text"
                        android:layout_below="@+id/tv_main_speaker"
                        android:layout_toRightOf="@+id/tv_grade_text"
                        android:text="一年级"
                        android:layout_alignBottom="@id/tv_grade_text"
                        />

                    <TextView
                        android:id="@+id/tv_subject_text"
                        style="@style/collective_prepare_lesson_detail_title_text"
                        android:layout_below="@+id/tv_grade_text"
                        android:text="学科"
                        />

                    <TextView
                        android:id="@+id/tv_subject_name"
                        style="@style/collective_prepare_lesson_detail_value_text"
                        android:layout_below="@+id/tv_grade_name"
                        android:layout_toRightOf="@+id/tv_subject_text"
                        tools:text="语文"
                        />


                    <!--<TextView
                        android:id="@+id/tv_real_start_time_desc"
                        style="@style/collective_prepare_lesson_detail_title_text"
                        android:layout_below="@+id/tv_schedule_time"
                        android:text="实际上课时间"
                        />
                    <TextView
                        android:id="@+id/tv_real_start_time"
                        style="@style/collective_prepare_lesson_detail_value_text"
                        android:layout_below="@+id/tv_schedule_time"
                        android:layout_toRightOf="@+id/tv_real_start_time_desc"
                        tools:text="2016-04-06 10:44"
                        />-->
                    <TextView
                        android:id="@+id/tv_view_type_desc"
                        style="@style/collective_prepare_lesson_detail_title_text"
                        android:layout_below="@+id/tv_subject_name"
                        android:text="@string/lesson_view_type"
                        />
                    <TextView
                        android:id="@+id/tv_view_type"
                        style="@style/collective_prepare_lesson_detail_value_text"
                        android:layout_below="@+id/tv_subject_name"
                        android:layout_toRightOf="@+id/tv_view_type_desc"
                        tools:text="直播课堂/录播课堂/优课资源"
                        />
                    <TextView
                        android:id="@+id/tv_schedule_time"
                        style="@style/collective_prepare_lesson_detail_title_text"
                        android:layout_below="@+id/tv_view_type_desc"
                        android:text="@string/time_schedule_lesson"
                        />
                    <TextView
                        android:id="@+id/tv_schedule_name"
                        style="@style/collective_prepare_lesson_detail_value_text"
                        android:layout_below="@+id/tv_view_type_desc"
                        android:layout_toRightOf="@+id/tv_schedule_time"
                        tools:text="2016-04-06 10:44"
                        />
                    <View
                        android:id="@+id/divider4"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_below="@id/tv_schedule_time"
                        android:background="@color/divide_color"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        />
                    <TextView
                        android:id="@+id/tv_participate_desc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="@string/active_participate_scope"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_below="@id/divider4"
                        />
                    <com.codyy.erpsportal.commons.widgets.RecyclerView.FixedRecyclerView
                        android:id="@+id/lv_participate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:cacheColorHint="#00000000"
                        android:layout_below="@id/tv_participate_desc"
                        />
                </RelativeLayout>
            </LinearLayout>
        </ScrollView>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="47dp"
            android:layout_alignParentBottom="true"
            android:background="#bf000000">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_centerInParent="true"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/assessment_details_bottom_text"
                    android:layout_width="wrap_content"
                    android:layout_height="47dp"
                    android:layout_centerInParent="true"
                    android:drawableLeft="@drawable/xxhdpi_assessmenting"
                    android:drawablePadding="5dp"
                    android:gravity="center"
                    android:text="进入评课"
                    android:textColor="#fff"
                    android:textSize="13dp" />

                <View
                    android:id="@+id/assessment_details_bottom_divider"
                    android:layout_width="1dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:background="#fff" />

                <TextView
                    android:id="@+id/assessment_details_bottom_set_teacher"
                    android:layout_width="wrap_content"
                    android:layout_height="47dp"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="10dp"
                    android:drawableLeft="@drawable/xxhdpi_init_setteacher"
                    android:drawablePadding="5dp"
                    android:gravity="center"
                    android:text="设置参与老师"
                    android:textColor="#fff"
                    android:textSize="13dp" />
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>