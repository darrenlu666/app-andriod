<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/personal_divide_bg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_title_height"
            android:background="@color/layout_title_bg">

            <Button
                android:id="@+id/btnBackOfLive"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:background="@drawable/back_btn_bg" />

            <TextView
                android:id="@+id/tv_title_live"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:text="直播课堂"
                android:textColor="@color/layout_title_text_color"
                android:textSize="@dimen/layout_title_text_size" />
            

            <CheckBox
                android:id="@+id/btn_select"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"
                android:background="@drawable/filter_bg_selector"
                android:button="@null"
                />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/divider_top_line" />

        <android.support.v4.widget.DrawerLayout
            android:id="@+id/live_class_drawerlayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
            <LinearLayout
                android:id="@+id/linear_tab"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="#fff"
                    android:gravity="center"
                    android:orientation="horizontal"
                    >

                    <TextView
                        android:id="@+id/live_class_text_real"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="dasd实时直播"
                        android:textColor="@color/green"
                        android:textSize="@dimen/fragment_title_size" />

                    <View
                        android:layout_width="1px"
                        android:layout_height="30dp"
                        android:background="#30000000" />

                    <TextView
                        android:id="@+id/live_class_text_old"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="往期录播"
                        android:textColor="@color/personal_text_color"
                        android:textSize="@dimen/fragment_title_size" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/divider_top_line" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:orientation="horizontal">

                    <View
                        android:id="@+id/live_class_slipview1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@color/green" />

                    <View
                        android:id="@+id/live_class_slipview2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1" />
                </LinearLayout>

                </LinearLayout>
                <android.support.v4.view.ViewPager
                    android:id="@+id/live_class_viewpager"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:background="@null" />

            </LinearLayout>
            <FrameLayout
                android:id="@+id/fl_filter"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                />
        </android.support.v4.widget.DrawerLayout>
    </LinearLayout>
</RelativeLayout>