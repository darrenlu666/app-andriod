<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical">


    <com.codyy.erpsportal.commons.widgets.TitleBar
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:text="筛选" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="60dp"
        android:text="上课时间:"
        android:textColor="@color/main_color"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/reservation_filter_text_time"
        style="@style/reservation_filter_dialog_text_style"
        android:layout_alignBaseline="@id/textView5"
        android:layout_alignBottom="@id/textView5"
        android:layout_marginLeft="20dp"
        android:layout_toEndOf="@id/textView5"
        android:layout_toRightOf="@id/textView5"
        android:hint="选择开始时间和结束时间" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/textView5"
        android:layout_alignStart="@id/textView5"
        android:layout_below="@id/textView5"
        android:layout_marginTop="20dp"
        android:text="课程状态:"
        android:textColor="@color/main_color"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/reservation_filter_text_state"
        style="@style/reservation_filter_dialog_text_style"
        android:layout_alignLeft="@id/reservation_filter_text_time"
        android:layout_alignStart="@id/reservation_filter_text_time"
        android:layout_alignTop="@id/textView7"
        android:hint="全部" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/textView7"
        android:layout_alignStart="@id/textView7"
        android:layout_below="@id/textView7"
        android:layout_marginTop="20dp"
        android:text="年级:"
        android:textColor="@color/main_color"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/reservation_filter_text_grade"
        style="@style/reservation_filter_dialog_text_style"
        android:layout_alignLeft="@id/reservation_filter_text_state"
        android:layout_alignStart="@id/reservation_filter_text_state"
        android:layout_alignTop="@id/textView10"
        android:hint="全部" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/textView10"
        android:layout_alignStart="@id/textView10"
        android:layout_below="@id/textView10"
        android:layout_marginTop="20dp"
        android:text="学科:"
        android:textColor="@color/main_color"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/reservation_filter_text_subject"
        style="@style/reservation_filter_dialog_text_style"
        android:layout_alignLeft="@id/reservation_filter_text_grade"
        android:layout_alignStart="@id/reservation_filter_text_grade"
        android:layout_alignTop="@id/textView11"
        android:hint="全部" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/textView11"
        android:layout_alignStart="@id/textView11"
        android:layout_below="@id/textView11"
        android:layout_marginTop="20dp"
        android:text="主讲教师:"
        android:textColor="@color/main_color"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/reservation_filter_text_teacher"
        style="@style/reservation_filter_dialog_text_style"
        android:layout_alignLeft="@id/reservation_filter_text_subject"
        android:layout_alignStart="@id/reservation_filter_text_subject"
        android:layout_alignTop="@id/textView13"
        android:hint="全部" />

    <Button
        android:id="@+id/reservation_filter_btn_sure"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/login_bt_bg"
        android:text="确定"
        android:textColor="#fff"
        android:textSize="18sp" />
</RelativeLayout>