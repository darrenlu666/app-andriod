<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="75dp"
    android:background="#fff"
    android:minHeight="75dp">

    <TextView
        android:id="@+id/firstpate_liveclass_item_seelive"
        android:layout_width="60dp"
        android:layout_height="25dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:background="@drawable/circle_bg_white"
        android:gravity="center"
        android:text="观看直播"
        android:textColor="@color/main_color"
        android:textSize="12sp" />

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/firstpage_liveclass_item_image"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="12dp"
        android:layout_marginStart="12dp"
        app:placeholderImage="@drawable/placeholder_img"
        app:roundAsCircle="true" />

    <TextView
        android:id="@+id/firstpage_liveclass_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/firstpage_liveclass_item_image"
        android:layout_marginLeft="21dp"
        android:layout_marginRight="70dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@id/firstpage_liveclass_item_image"
        android:ellipsize="end"
        android:singleLine="true"
        android:textColor="@color/fistpageclass_gridview_item_textcolor"
        android:textSize="16sp"
        tools:text="Large sdfasdfasdfasdfasdfsadfsdfasdfasdfasdfasdfasdfasdffasdfasdfasdfasdfasdfasdfText" />

    <TextView
        android:id="@+id/firstpage_liveclass_item_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/firstpage_liveclass_item_title"
        android:layout_alignStart="@id/firstpage_liveclass_item_title"
        android:layout_below="@id/firstpage_liveclass_item_title"
        android:layout_marginRight="70dp"
        android:layout_marginTop="6dp"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="Small asdfsssssssssssssssssssssssssssssssssText"
        android:textColor="#929292"
        android:textSize="13sp" />

</RelativeLayout>