<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:minHeight="40dp">

    <ImageView
        android:id="@+id/evaluation_video_item_iamge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="20dp"
        android:background="@drawable/xxhdpi_list_select" />

    <TextView
        android:id="@+id/evaluation_video_item_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="60dp"
        android:text="视频文件"
        android:textSize="20sp" />

    <Button
        android:id="@+id/evaluation_video_item_btn"
        android:layout_width="50dp"
        android:layout_height="25dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:focusable="false"
        android:layout_marginRight="10dp"
        android:background="@drawable/green_line_btn_bg"
        android:text="下载"
        android:textSize="12sp" />
</RelativeLayout>