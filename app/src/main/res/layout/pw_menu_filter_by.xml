<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:background="@drawable/bg_popup_menu"
    android:orientation="vertical">

    <Button
        android:id="@+id/btn_filter_by_properties"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        android:ems="7"
        android:padding="8dp"
        android:text="@string/property"
        android:textColor="@color/popup_menu_item_text_color"
        android:textSize="16sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/divide_color" />

    <Button
        android:id="@+id/btn_filter_by_knowledge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        android:ems="7"
        android:padding="8dp"
        android:text="@string/knowledge_point"
        android:textColor="@color/popup_menu_item_text_color"
        android:textSize="16sp" />
</LinearLayout>