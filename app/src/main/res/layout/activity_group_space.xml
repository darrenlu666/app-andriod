<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        android:id="@+id/lin_root_view"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        android:background="@color/white"
        >
        <include layout="@layout/toolbar_layout"/>
    <android.support.v4.widget.DrawerLayout
        android:id="@+id/drawer_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.v4.widget.SwipeRefreshLayout
                android:id="@+id/refresh_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >
                <com.codyy.erpsportal.commons.widgets.RecyclerView.SimpleRecyclerView
                    android:id="@+id/recycler_view"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:background="#fff" />
            </android.support.v4.widget.SwipeRefreshLayout>
            <com.codyy.erpsportal.commons.widgets.EmptyView
                android:id="@+id/empty_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone"
                />
        </RelativeLayout>
        <FrameLayout
            android:id="@+id/fl_filter"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            />
    </android.support.v4.widget.DrawerLayout>
    <RelativeLayout
        android:id="@+id/rlt_prompt_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/md_grey_300"
        android:visibility="gone"
        >
        <TextView
            android:id="@+id/tv_prompt_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="请填写申请理由"
            android:textColor="@color/black"
            android:layout_centerHorizontal="true"
            android:padding="10dp"
            android:textSize="@dimen/poe_txt_size_head"
            />
        <ImageView
            android:id="@+id/iv_prompt_close"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/delete_x"
            android:padding="10dp"
            android:layout_alignParentRight="true"
            />
        <android.support.v7.widget.CardView
            android:id="@+id/card_view_prompt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_prompt_title"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            >
            <EditText
                android:id="@+id/edt_prompt_reason"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="加入理由最多150个字"
                android:minLines="3"
                android:maxLength="150"
                android:background="@drawable/white_to_transparent"
                android:padding="10dp"
                android:layout_margin="10dp"
                android:imeOptions="actionSend"
                android:layout_below="@id/tv_prompt_title"
                />
        </android.support.v7.widget.CardView>
        <TextView
            android:id="@+id/tv_send_prompt"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:layout_below="@id/card_view_prompt"
            android:layout_alignLeft="@id/card_view_prompt"
            android:layout_alignRight="@id/card_view_prompt"
            android:text="发送申请"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="@dimen/poe_txt_size_title"
            android:background="@drawable/bg_green_prompt"
            android:layout_marginBottom="10dp"
            />
    </RelativeLayout>

</LinearLayout>


