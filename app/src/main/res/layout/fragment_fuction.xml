<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app = "http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height"
        android:background="@color/main_green">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/function"
            android:textColor="@color/white"
            android:textSize="24sp" />
    </RelativeLayout>
    <com.codyy.erpsportal.commons.widgets.EmptyView
        android:id="@+id/empty_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        />
    <com.codyy.erpsportal.commons.widgets.RecyclerView.RecyclerTabLayoutSimple
        android:id="@+id/recycler_tab_layout"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="@color/white"
        app:rtl_tabIndicatorHeight="0dp"
        app:rtl_tabIndicatorModel="1"
        app:rtl_tabMaxWidth="60dp"
        app:rtl_tabMinWidth="50dp"
        app:rtl_tabPadding="0dp"
        android:visibility="gone"
        />
    <android.support.v7.widget.RecyclerView
        android:id="@+id/rcv_frag_function"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        />
</LinearLayout>
