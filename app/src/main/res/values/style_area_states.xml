<?xml version="1.0" encoding="utf-8"?>
<!--首页地区状态相关风格-->
<resources>
    <style name="NumLabel">
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:textColor">#999999</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="NumSemester">
        <item name="android:textColor">#fff36802</item>
        <item name="android:textSize">17sp</item>
    </style>

    <style name="NumWeek">
        <item name="android:textColor">#ff1abbf1</item>
        <item name="android:textSize">17sp</item>
    </style>

    <style name="LabelClassroomCount">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">#f6f6f6</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:textColor">#707070</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="LabelPeriodTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_marginTop">24dp</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:textColor">#444444</item>
        <item name="android:textSize">12sp</item>
    </style>

    <!-- 首页-专递课堂-->
    <style name="ChannelLiveState">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:paddingTop">3dp</item>
        <item name="android:paddingBottom">3dp</item>
    </style>

    <style name="ChannelTimeBG">
        <item name="android:padding">3dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/bg_filter_rectangle_green</item>
    </style>

    <style name="ChannelTimeNormal">
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/main_color</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>