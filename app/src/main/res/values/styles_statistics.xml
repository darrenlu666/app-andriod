<?xml version="1.0" encoding="utf-8"?>
<!-- 资源模块相关风格 -->
<resources>
    <style name="label_classroom_stat">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">14dp</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="item_classroom_stat">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">14dp</item>
        <item name="android:background">@color/white</item>
        <item name="android:textSize">19sp</item>
        <item name="android:clickable">true</item>
        <item name="android:textColor">@color/sl_statistics_item</item>
    </style>

    <style name="area_name">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:paddingLeft">2dp</item>
        <item name="android:paddingRight">2dp</item>
        <item name="android:lines">2</item>
        <item name="android:ems">3</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">16sp</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="tv_table_cell">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textSize">16sp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:paddingLeft">8dp</item>
    </style>

    <style name="StatisticsFilterDate">
        <item name="android:padding">8dp</item>
        <item name="android:textColor">#666666</item>
        <item name="android:background">@drawable/bg_btn_statistics_filter_date</item>
    </style>

    <style name="StatisticsFilterDate.Button">
        <item name="android:drawableRight">@drawable/ic_pop_down</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:drawablePadding">4dp</item>
    </style>

    <style name="StatisticsFilterSubject">
        <item name="android:padding">8dp</item>
        <item name="android:textColor">#666666</item>
        <item name="android:clickable">true</item>
        <item name="android:background">@drawable/bg_tv_statistics_filter_subject</item>
    </style>

    <style name="StatisticsFilterRadioButton">
        <item name="android:paddingLeft">4dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:layout_marginLeft">16dp</item>
    </style>
</resources>